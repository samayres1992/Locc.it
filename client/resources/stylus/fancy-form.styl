.fancy-input.passcodeInfo {
  &:before {
    background-color: rgba(255,255,255,0.1);
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  &.title, &.username, &.passcode, &.password, &.url, &.note {
    padding-left: 8em;
    padding-right: 8em;
  }

  &.title:before, &.username:before, &.passcode:before, &.password:before, &.url:before, &.note:before {
    padding: 14px;
    text-align: center;
    width: 7em;
  }
  &.title:before {
    content: "Title";
  }
  &.username:before {
    content: "Username";
  }
  &.passcode:before {
    content: "Passcode";
  }
  &.password:before {
    content: "Password";
  }
  &.url:before {
    content: "URL";
  }
  &.note:before {
    content: "Note";
  }
}

