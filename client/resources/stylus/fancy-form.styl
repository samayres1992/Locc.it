.fancy-input { min-height: 58px; width: 100%; border-radius: 3px; position: relative; display: block; border: 1px solid rgba(255,255,255,0.5); padding:  14px; transition: 0.4s; background: transparent;}
.fancy-input ~ .focus-border:before,
.fancy-input ~ .focus-border:after{content: ""; position: absolute; top: 0; left: 0; width: 0; height: 2px; background-color: #fff; transition: 0.3s;}
.fancy-input ~ .focus-border:after{top: auto; bottom: 0; left: auto; right: 0;}
.fancy-input ~ .focus-border i:before,
.fancy-input ~ .focus-border i:after{content: ""; position: absolute; top: 0; left: 0; width: 2px; height: 0; background-color: #fff; transition: 0.4s;}
.fancy-input ~ .focus-border i:after{left: auto; right: 0; top: auto; bottom: 0;}
.fancy-input:focus ~ .focus-border:before,
.fancy-input:focus ~ .focus-border:after,
.has-content.fancy-input ~ .focus-border:before,
.has-content.fancy-input ~ .focus-border:after{width: 100%; transition: 0.3s;}
.fancy-input:focus ~ .focus-border i:before,
.fancy-input:focus ~ .focus-border i:after,
.has-content.fancy-input ~ .focus-border i:before,
.has-content.fancy-input ~ .focus-border i:after{height: 100%; transition: 0.4s;}
.fancy-input ~ label{position: absolute; left: 14px; width: 100%; top: 0.75em; color: #fff; transition: 0.3s; z-index: -1; letter-spacing: 0.5px;}
.fancy-input:focus ~ label, .has-content.fancy-input ~ label{top: -18px; left: 0; font-size: 12px; color: #fff; transition: 0.3s;}

