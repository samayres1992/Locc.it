body {
  background: #4b6cb7;
  color: #fff;
  font-size: 1.2em;
  min-height: 100%;
  &:focus {
    outline: none;
	}
  &:active {
    outline: none;
	}
}

.container {
	max-width: 1080px;
	margin: 0 auto;
  min-height: 100%;
}

header {
  .logo {
    width: 100px;
  }
  .ant-menu {
    position: relative;
    top: 25px;
  }
  .ant-menu-horizontal > .ant-menu-item > a, .ant-menu-item {
    color: #fff;
    font-size: 1.2em;
  }
}

.content {
  padding: 3em 0;  
  
  h1, h2 {
    color: #fff;
  }

  h1 {
    font-size: 3em;
    margin-bottom: 0;
  }

  h2 {
    font-size: 1.25em;
    margin-bottom: 2em;
  }

	label {
    color: #fff;
	}

	input[type="text"], input[type="password"], textarea {
    font: 15px/24px "Lato", Arial, sans-serif;
    color: #fff;
    width: 100%;
    box-sizing: border-box;
    letter-spacing: 1px;
    border-radius: 3px;
    padding: 1em;
    outline: 0;
	}

	textarea {
		min-width: 100%;
		max-width: 100%;
    min-height: 200px;
    max-height: 500px;
	}
	
	.input-effect {
    position: relative;
    margin: 0 0 30px;
    .ant-input-password input {
      background-color: transparent;
      border: 0;
      margin: 0;
      padding: 0;
      color: #fff;
    }
    .ant-input-suffix i {
      color: #fff;
    }
	}

  .expiry {
    display: none;
  }
}

.pagination {
  text-align: center;
  .ant-pagination-item-link, .ant-pagination-item {
    background-color: transparent;
    a {
      color: #fff;
    }
    &:hover {
      border: 1px solid #fff;
    }
  }
  .ant-pagination-item-active {
    background-color: #fff;
    border: 1px solid #fff;
    a {
      color: #4b6cb7; 
    }  
  }
}

.no-data {
  color: #fff;
}

footer {
  height: 100px;
  border-top: 2px solid white;
  text-align: center;
  padding: 35px;
  .anticon-heart {
    color: red;
    font-size: 1.5em;
  }
}
